#!/bin/bash
# Run the bot

# Make sure we're groovy enough
which groovy > /dev/null || echo "Cannot find groovy"

# Setup the environment
[ -z $BOT_HOME ] && BOT_HOME="."
CLASSPATH="$BOT_HOME/src/main/groovy:$BOT_HOME/src/main/resources:$BOT_HOME/build/libs/bot-deps.jar:$CLASSPATH"
export BOT_HOME CLASSPATH

# Start the bot
groovy $BOT_HOME/bot.groovy $@
